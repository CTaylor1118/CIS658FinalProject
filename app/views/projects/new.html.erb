<iframe id="uploader"></iframe>
<script type="text/javascript">
  filepicker.setKey("AszT4VzZRMm5R0BtsKYVoz");
  filepicker.pick(
   {
      mimetype: ['image/jpeg', 'image/png', 'image/gif'],
      container: 'uploader',
      services: ['COMPUTER', 'FACEBOOK', 'INSTAGRAM', 'IMGUR', 'FLICKR', 'IMAGE_SEARCH'],
      imageMax: [1200, 1200]
    },
    function(Blob){
      console.log(JSON.stringify(Blob));
      var obj = {
        project : {
          name: Blob.filename.substring(0, Blob.filename.lastIndexOf(".")),
          version: 0,
          image: Blob.url, 
          user_id: parseInt('<%= @current_user.id %>')
        }
      }
      var data = JSON.stringify(obj)
      console.log(data)
      $.post({
        url: '/projects.json',
        data: data, 
        contentType: 'application/json',
        success: function(data){
          console.log(data)
          window.location.replace('/projects/' + data.id + '/edit')
        }
      })
    },
    function(FPError){
      console.log(FPError.toString());
    }
  );
</script>
